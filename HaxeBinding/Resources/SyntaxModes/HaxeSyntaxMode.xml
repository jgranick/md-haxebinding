<SyntaxMode name="Haxe" mimeTypes="text/x-haxe">
	
	<!-- <Property name="LineComment">//</Property> -->
	<Property name="BlockCommentStart">/*</Property>
	<Property name="BlockCommentEnd">*/</Property>
	<Property name="StringQuote">"</Property>
	<Property name="StringQuote">'</Property>
	
	
	<EolSpan color = "Comment(Line)" rule="Comment" tagColor="comment.tag.line">//</EolSpan>
	
	<Span color = "Comment(Block)" rule="Documentation" tagColor="comment.tag.block">
		<Begin>/**</Begin>
		<End>*/</End>
	</Span>
	
	<Span color = "Comment(Block)" rule="Comment" tagColor="comment.tag.block">
		<Begin>/*</Begin>
		<End>*/</End>
	</Span>
	
	<Span color = "Preprocessor" rule="text.preprocessor" stopateol="true">
		<Begin>#</Begin>
		<End>#end</End>
	</Span>
	
	<Span color = "String" rule="String" stopateol = "true" escape='\"'>
		<Begin>"</Begin>
		<End>"</End>
	</Span>

	<Span color = "String" rule="String" stopateol = "true" escape="\'">
		<Begin>&apos;</Begin>
		<End>&apos;</End>
	</Span>
	
	
	<Match color = "Number">CSharpNumber</Match>
	
	<Keywords color = "Punctuation">
		<Word>+</Word>
		<Word>-</Word>
		<Word>*</Word>
		<Word>/</Word>
		<Word>%</Word>
		<Word>^</Word>
		
		<Word>?</Word>
		<Word>:</Word>
		
		<Word>&amp;</Word>
		
		<Word>=</Word>
		<Word>;</Word>
		<Word>,</Word>
		<Word>.</Word>
	</Keywords>
	
	<Keywords color = "Punctuation(Brackets)">
		<Word>(</Word>
		<Word>)</Word>
		<Word>&lt;</Word>
		<Word>&gt;</Word>
		<Word>{</Word>
		<Word>}</Word>
		<Word>[</Word>
		<Word>]</Word>
	</Keywords>
	
	<Keywords color = "Keyword(Access)">
		<Word>this</Word>
		<Word>super</Word>
	</Keywords>
	
	<Keywords color = "Keyword(Operator)">
		<Word>new</Word>
	</Keywords>
	
	<Keywords color = "Keyword(Selection)">
		<Word>else</Word>
		<Word>if</Word>
		<Word>switch</Word>
		<Word>case</Word>
		<Word>default</Word>
	</Keywords>
	
	<Keywords color = "Keyword(Iteration)">
		<Word>do</Word>
		<Word>for</Word>
		<Word>in</Word>
		<Word>while</Word>
	</Keywords>
	
	<Keywords color = "Keyword(Jump)">
		<Word>break</Word>
		<Word>continue</Word>
		<Word>return</Word>
	</Keywords>
	
	<Keywords color = "Keyword(Exceptions)">
		<Word>try</Word>
		<Word>throw</Word>
		<Word>catch</Word>
	</Keywords>
	
	<Keywords color = "Keyword(Constants)">
		<Word>true</Word>
		<Word>false</Word>
		<Word>null</Word>
	</Keywords>

	<Keywords color = "Keyword(Void)">
		<Word>void</Word>
	</Keywords>
		
	<Keywords color = "Keyword(Type)">
		<Word>Bool</Word>
		<Word>Enum</Word>
		<Word>Int</Word>
		<Word>Float</Word>
		<Word>Dynamic</Word>
		<Word>String</Word>
		<Word>List</Word>
		<Word>FastList</Word>
		<Word>Date</Word>
		<Word>Xml</Word>
		<Word>Void</Word>
		<Word>Array</Word>
		<Word>Map</Word>
		<Word>Hash</Word>
		<Word>IntHash</Word>
	</Keywords>
	
	<Keywords color = "Keyword(Declaration)">
		<Word>function</Word>
		<Word>class</Word>
		<Word>interface</Word>
		<Word>enum</Word>
		<Word>typedef</Word>
		<Word>var</Word>
	</Keywords>

	<Keywords color = "Keyword(Modifier)">
		<Word>public</Word>
		<Word>private</Word>
		<Word>extern</Word>
		<Word>abstract</Word>
		<Word>inline</Word>
		<Word>static</Word>
		<Word>dynamic</Word>
		<Word>override</Word>
		<Word>extends</Word>
		<Word>implements</Word>
	</Keywords>

	<Keywords color = "Keyword(Namespace)">
		<Word>package</Word>
		<Word>import</Word>
		<Word>using</Word>
	</Keywords>
	
	<Rule name = "text.preprocessor">
		<Keywords color="Keyword(Selection)">
			<Word>if</Word>
			<Word>else</Word>
			<Word>elseif</Word>
			<Word>end</Word>
			<Word>error</Word>
		</Keywords>
	</Rule>
	
	<Rule name = "Comment">
		<Keywords color="Comment Tag" ignorecase="True">
			<Word>TODO</Word>
			<Word>FIXME</Word>
			<Word>BUG</Word>
			<Word>HACK</Word>
		</Keywords>
	</Rule>
	
	<Rule name = "Documentation">
		<Keywords color="Comment(Keyword)" ignorecase="True">
			<Word>@author</Word>
			<Word>@deprecated</Word>
			<Word>@version</Word>
			<Word>@copy</Word>
			<Word>@default</Word>
			<Word>@eventType</Word>
			<Word>@example</Word>
			<Word>@exampleText</Word>
			<Word>@includeExample</Word>
			<Word>@inheritDoc</Word>
			<Word>@internal</Word>
			<Word>@param</Word>
			<Word>@private</Word>
			<Word>@return</Word>
			<Word>@see</Word>
			<Word>@since</Word>
			<Word>@throws</Word>
			<Word>@usage</Word>
		</Keywords>
	</Rule>
	
</SyntaxMode>